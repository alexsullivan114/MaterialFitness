<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <!-- A style for sliding in and out dialogs -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TextAppearance">
    </style>

    <style name="TextAppearance.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Accent.25">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.DarkestGray">
        <item name="android:textColor">@color/darkest_gray</item>
    </style>

    <style name="TextAppearance.DarkestGray.25">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.DarkestGray.30">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.DarkerGray">
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="TextAppearance.DarkerGray.25">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.DarkerGray.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.DarkerGray.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.DarkerGray.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.DarkerGray.15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.LighterGray">
        <item name="android:textColor">@color/lighter_gray</item>
    </style>

    <style name="TextAppearance.LighterGray.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.LighterGray.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.White.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Black.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Black.24">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
